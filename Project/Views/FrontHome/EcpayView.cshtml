@model System.Collections.Generic.Dictionary<string, string>
@{
    Layout = "~/Views/Shared/Front_Layout.cshtml";
}
@section styles{

    <style>
        .box{
            left:50%;
            top:50%;

        }
    </style>
}

    @if (@Model["RtnCode"] == "1")
    {
        <div class="box mt-5">
            <div class="mt-4 d-flex justify-content-center">
                <div>
                    <h2 class="d-flex justify-content-center fw-bold" style="color:#5A5AAD">付款成功</h2>
                    <div class="my-3">
                        <div class="mt-3">訂單編號：@Model["MerchantTradeNo"]</div>
                        <div class="mt-3">訂單日期：@Model["TradeDate"]</div>
                        <div class="mt-3">付款日期：@Model["PaymentDate"]</div>
                    </div>
                </div>
            </div>
            <div class="mt-3 d-flex justify-content-center">
                <a class="btn btn-secondary" href="@Url.Action("CheckOrder","FrontHome")">查看訂單</a>
                <a class="btn btn-secondary ms-3" href="@Url.Action("FrontIndex","FrontHome")">返回首頁</a>
            </div>
        </div>
    }
    else
    {
    <div class="box mt-5">
        <div class="mt-4 d-flex justify-content-center">
            <div>
                <h2 class="d-flex justify-content-center fw-bold mt-5" style="color:	#930000">付款失敗</h2>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-center">
            <a class="btn btn-secondary ms-3" href="@Url.Action("FrontIndex","FrontHome")">返回首頁</a>
        </div>
    </div>
    }
