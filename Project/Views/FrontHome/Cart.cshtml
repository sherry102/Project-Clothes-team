﻿@{
    Layout = "~/Views/Shared/Front_Layout.cshtml";
}
<div id="app">
    <div class="container">
        <h1>我的購物車</h1>
        <div class="check">
            <div class="col-md-8 cart-items">
                <div v-for="(item, index) in cartArray" :key="item.PName" class="cart-header">
                    <div class="close1" @@click="removeItem(index)"></div>
                    <div class="cart-sec simpleCart_shelfItem">
                        <div class="cart-item cyc">
                            <div class="cart-img-con1">
                                <img :src="item.photo0 && item.photo0 !== '' ? `${baseAddress}/images/${item.photo0}` : '/images/no_image.jpg'" class="img-responsive" alt="" />

                            </div>
                            <div class="cart-img-con2">
                                <img :src="item.photo1 && item.photo1 !== '' ? `${baseAddress}/images/${item.photo1}` : '/images/no_image.jpg'" class="img-responsive" alt="" />
                            </div>
                            <div class="cart-item-info">
                                <p>{{ item.pType }} </p>
                                <h3>
                                    {{ item.pName }}
                                </h3>
                                <ul class="qty">
                                    <li><p>尺寸 : {{ item.pSize }}</p></li>
                                </ul>
                                <ul class="qty">
                                    <li><p>顏色 : {{ item.pColor }}</p></li>
                                </ul>
                                <ul class="qty">
                                    <li><p>文字(正面) : {{ item.customText0 }}</p></li>
                                </ul>
                                <ul class="qty">
                                    <li><p>文字(背面) : {{ item.customText1 }}</p></li>
                                </ul>
                            </div>
                        </div>
                        <div class="num">
                            <div class="quantity-controls">
                                <button @@click="updateQuantity(index, 'decrease')">-</button>
                                <input type="text" class="quantity" v-model="item.pCount" readonly />
                                <button @@click="updateQuantity(index, 'increase')">+</button>
                            </div>
                        </div>
                        <div class="delivery">
                            <p>NT$ {{ item.pPrice * item.pCount }}</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-3 cart-total">
                <div class="order-summary-container">
                    <p></p>
                    <a class="continue" href="~/FrontHome/FrontIndex">繼續購物</a>
                    <div class="price-details">
                        <h3>訂單資訊</h3>
                        <span>合計</span>
                        <span class="total1">NT$ {{ price }}</span>
                        <span>折價券</span>
                        <span class="total1">- NT$ {{ dcprice }}</span>
                        <span>運費</span>
                        <span class="total1">+NT$ 60</span>
                        <div class="clearfix"></div>
                    </div>
                    <ul class="total_price">
                        <li class="last_price"><h4>訂單總價</h4></li>
                        <li class="last_price"><h3>NT$ {{ totalprice }} </h3></li>
                    </ul>
                    <br />
                    <a class="order" v-on:click="UpdateCart">前往結帳</a>

                </div>

                <div class="total-item">

                    <h3 class="price-details">選擇折價券</h3>
                    <h4>COUPONS</h4>
                    <button class="cpns" href="#">使用折價券</button>
                    <p><a href="#">Log In</a> to use accounts - linked coupons</p>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="https://unpkg.com/vue@3.5.13/dist/vue.global.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.8/axios.min.js" integrity="sha512-v8+bPcpk4Sj7CKB11+gK/FnsbgQ15jTwZamnBf/xDmiQDcgOIYufBo6Acu1y30vrk8gg5su4x0CG3zfPaq5Fcg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        var vueApp = {
            data() {
                return {
                    baseAddress: "https://localhost:7279",
                    cartArray: [],
                    dcprice: 20,
                    itemName:""
                };
            },
            computed: {
                price() {
                    return this.cartArray.reduce((total, item) => {
                        return total + (item.pPrice * item.pCount);
                    }, 0);
                },
                totalprice() {
                    return (this.price - this.dcprice + 60);
                }
            },
            watch: {
                // 監聽 price 和 totalprice 變化，並將其暫存
                price(newPrice) {
                    this.saveToStorage('price', newPrice);
                },
                totalprice(newTotalPrice) {
                    this.saveToStorage('totalprice', newTotalPrice);
                }
            },
            methods: {
                getCartItems: function () {
                    let _this = this;
                    
                    // 先從 LocalStorage 讀取資料
                    const storedCart = localStorage.getItem('cartItems');
                    if (storedCart) {
                        _this.cartArray = JSON.parse(storedCart);
                        _this.itemName = _this.cartArray.map(item => item.pName).join("#");
                        console.log("從 LocalStorage 載入購物車項目", _this.cartArray);
                    } else {
                        // 如果 LocalStorage 沒有資料，從伺服器抓取
                        axios.post(`${_this.baseAddress}/Ajax/GetCartItems`, {})
                            .then(response => {
                                console.log(response);
                                _this.itemName = response.data.map(item => item.pName).join("#");
                                if (response.data) {
                                    _this.cartArray = response.data;
                                    
                                    // 把資料存到 LocalStorage
                                    localStorage.setItem('cartItems', JSON.stringify(response.data));
                                    console.log(JSON.stringify(response.data, null, 2));
                                } else {
                                    alert("請先登入會員");
                                }
                            })
                            .catch(err => {
                                alert("錯誤: " + err.message);
                            });
                    }
                },
                updateQuantity(index, action) {
                    if (action === 'increase') {
                        this.cartArray[index].pCount++;
                    } else if (action === 'decrease' && this.cartArray[index].pCount > 1) {
                        this.cartArray[index].pCount--;
                    }
                    this.updateLocalStorage();
                },
                removeItem: function (index) {
                    const itemToRemove = this.cartArray[index]; // 取得要刪除的商品
                    const productId = itemToRemove.id; // 确保这里是正确的 ID 字段
                    console.log("商品ID: ", productId);

                    axios.delete(`${this.baseAddress}/Ajax/DeleteItem/${productId}`)
                        .then(response => {
                            if (response.data === "已刪除商品") {
                                this.cartArray.splice(index, 1); // 从数组中删除该商品
                                this.updateLocalStorage();
                                alert("商品已成功刪除(此刪除功能有問題,待修)");
                            } else {
                                alert("刪除商品失敗: " + response.data);
                            }
                        })
                        .catch(error => {
                            console.error("刪除錯誤: ", error);
                            alert("刪除錯誤: " + error.message);
                        });
                },
                updateLocalStorage() {
                    localStorage.setItem('cartItems', JSON.stringify(this.cartArray));
                },
                // 從 localStorage 中加載數據
                loadFromStorage() {
                    const savedPrice = localStorage.getItem('price');
                    const savedTotalPrice = localStorage.getItem('totalprice');

                    if (savedPrice) {
                        this.price = parseFloat(savedPrice);
                    }
                    if (savedTotalPrice) {
                        this.totalprice = parseFloat(savedTotalPrice);
                    }
                },
                saveToStorage(key, value) {
                    localStorage.setItem(key, value);
                },
                UpdateCart: function (item) {
                    let _this = this;
                    
                    let updatedItem = {
                        PCount: Number(item.pCount),
                    };
                    console.log(updatedItem);
                    axios.put(`${_this.baseAddress}/Ajax/UpdateItem/${item.Pid}`, updatedItem)
                        .then(response => {
                            alert("商品數量更新功能有問題..");
                            localStorage.removeItem('cartItems');
                            _this.getCartItems();
                            // window.location.href = '/FrontHome/CartToPay';
                        })
                        .catch(error => {
                            alert("更新失敗: " + error.response.data);
                        });
                    let totalAmount = _this.totalprice;
                    let itemName = _this.itemName
                    // 動態建立 `<form>`
                    let form = document.createElement("form");
                    form.method = "POST";
                    form.action = "/FrontHome/CartToPay";

                    // 加入 `TotalAmount`
                    let totalInput = document.createElement("input");
                    totalInput.type = "hidden";
                    totalInput.name = "TotalAmount";
                    totalInput.value = totalAmount;
                    form.appendChild(totalInput);

                    // 加入 `ItemName`
                    let itemInput = document.createElement("input");
                    itemInput.type = "hidden";
                    itemInput.name = "ItemName";
                    itemInput.value = itemName;
                    form.appendChild(itemInput);

                    // 把 `form` 加到 `body`，然後提交
                    document.body.appendChild(form);
                    form.submit();
                }
            },
            mounted: function () {
                this.getCartItems();
                this.loadFromStorage();
            }
        };
        var app = Vue.createApp(vueApp).mount("#app");

    </script>
}

