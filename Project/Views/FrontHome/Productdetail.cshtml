                    <input type="number" class="form-control mt-4 text-center" style="width:80px;" v-model="count" min="0" />
                    <select class="form-control ms-3 mt-4 " style="width:130px; height:37.6px;">
                        <option disabled selected>請選擇尺寸</option>
                        <option>S</option>
                        <option>M</option>
                        <option>L</option>
                        <option>XL</option>
                    </select>
                </div>

            </div>
        </div>
                    <div class="input-group">
                        <button class="btn btn-outline-secondary" type="button" >-</button>
                        <input type="text" class="form-control" v-model="quantity" readonly>
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                
        </div>
    </div>
</div>

