                        <div class="color color-black" v-bind:class="{'active-color': activeColor === 'black'}" v-on:click="changeColor('black','rgba(15, 15, 15,0.8)')"></div>
                        <div class="color color-yellow" v-bind:class="{'active-color': activeColor === 'yellow'}" v-on:click="changeColor('yellow','#ffee00')"></div>
                        <div class="color color-blue" v-bind:class="{'active-color': activeColor === 'blue'}" v-on:click="changeColor('blue','#085ea0')"></div>
                        <div class="color color-red" v-bind:class="{'active-color': activeColor === 'red'}" v-on:click="changeColor('red','#8b0516')"></div>
                        <div class="color color-green" v-bind:class="{'active-color': activeColor === 'green'}" v-on:click="changeColor('green','#2b814c')"></div>
                        <div class="color color-lightgreen" v-bind:class="{'active-color': activeColor === 'lightgreen'}" v-on:click="changeColor('lightgreen','rgb(184, 239, 226)')"></div>
                        <div class="color color-gray" v-bind:class="{'active-color': activeColor === 'gray'}" v-on:click="changeColor('gray','rgb(197, 196, 196)')"></div>
                        <div class="color color-orange" v-bind:class="{'active-color': activeColor === 'orange'}" v-on:click="changeColor('orange','#d37c0a')"></div>
                    </div>
                </div>
            </div>
            <!-- 衣服件數 -->
            <div class="fs-5 fw-bold mt-4">
                衣服件數
