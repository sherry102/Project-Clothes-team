                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                            type="button" role="tab" aria-controls="profile" aria-selected="false">
                        運送方式
                    </button>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active p-3 text-center" id="introduction" role="tabpanel"
                     aria-labelledby="introduction-tab">
                    
                </div>
                <div class="tab-pane fade p-3 text-center" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="https://unpkg.com/vue@3.5.13/dist/vue.global.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.8/axios.min.js" integrity="sha512-v8+bPcpk4Sj7CKB11+gK/FnsbgQ15jTwZamnBf/xDmiQDcgOIYufBo6Acu1y30vrk8gg5su4x0CG3zfPaq5Fcg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        var vueApp={
            data() {
                return {
                    baseAddress: "https://localhost:7279",
                    filter:"",
                    product: [],
                }
            },
            methods:{
                List: function () {
                    let _this = this;
                    axios.get(`${_this.baseAddress}/Product/Getproduct`).then(response => {
                        _this.product = response.data;
                    }).catch(err => {
                        alert(err.message)
                    })
                },
                Filterproduct:function(){
                    let _this=this;
                    var request={};
                    request.pname=_this.filter;
                    axios.post(`${_this.baseAddress}/Product/Filterproduct`, request).then(response=>{
                        _this.product = response.data;
                    });
                },
            },
            mounted:function () {
                let _this = this;
                _this.List();
                _this.Filterproduct();

            }
        };
        var app=Vue.createApp(vueApp).mount("#app");
    </script>
}