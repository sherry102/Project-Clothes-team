		TOP5_Today();
		SalesRanking_List.addEventListener("click", (e) => {
			
			let date = e.target.textContent.trim();
			if (date === "篩選") {
				return;
			}
			e.preventDefault();
			document.getElementById("SalesRanking_Date").innerHTML = "| " + date;
			switch (date) {
				case "今天":
					TOP5_Today();
						break;

				case "這個月":
					TOP5_Month();
						break;
				case "今年":
