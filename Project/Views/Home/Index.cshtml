					data: typesales_year
				}]
			})
		}

		document.addEventListener("DOMContentLoaded", () => {
			echart_today();
		});


		$(function () { 
			$("#sales_filter").on("click", (e) => {
				e.preventDefault();
				let salesDate = e.target.textContent.trim();
				$("#sales_date").text(`| ${salesDate}`);
				switch (salesDate) { 
					case "今天":
