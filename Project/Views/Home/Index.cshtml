	<!--類別銷量-->
	<script>
		let typesales_today = @Html.Raw(JsonSerializer.Serialize(ViewBag.typesales_today));
		let typesales_month = @Html.Raw(JsonSerializer.Serialize(ViewBag.typesales_month));
