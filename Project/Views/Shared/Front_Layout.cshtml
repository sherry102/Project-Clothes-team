    <!-- 引用 Vue.js (3.x) CDN -->
    <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>

    <!-- 初始化 Vue -->
    <script>
        const { createApp } = Vue;
        createApp({
            data() {
                return {
                    faccount: '',   
                    fpassword: '',  
                    passwordVisible: false,// 密碼是否顯示明文
                    isLoading: false,// 是否顯示 Loading 狀態
                    errorMessage: '', // 顯示錯誤訊息
                    isLoggedIn: false,// 是否登入
                    memberInfo: null,  // 會員資訊
                    showDropdown: false// 新增會員下拉選單相關資料
                };
            },// 頁面載入時檢查登入狀態
             mounted() {                    
                this.checkLoginStatus();
                
                const loginModal = document.getElementById('loginModal');
                if (loginModal) {
                loginModal.addEventListener('shown.bs.modal', () => {
                    this.$nextTick(() => {
                    if (this.$refs.accountInput) {
                        this.$refs.accountInput.focus();
                            }
                        });
                    });
                }
            },                 
            methods: {                                            
                togglePasswordVisibility() {
                    this.passwordVisible = !this.passwordVisible;                   
                },
                
            handleKeyNavigation(currentField, action, event) {
                if (event) {
                    event.preventDefault();
                }
                const navigationMap = {
                    account: {
                        Enter: 'password',
                        ArrowDown: 'password',
                        ArrowUp: 'loginButton'
                    },
                    password: {
                        Enter: 'loginButton',
                        ArrowDown: 'loginButton',
                        ArrowUp: 'account'
                    },
                    loginButton: {
                        Enter: 'doLogin',
                        ArrowDown: 'account',
                        ArrowUp: 'password'
                    }
                };
                const targetField = navigationMap[currentField][action];// 找到目標欄位

                    if (targetField === 'doLogin') { // 如果目標是 "doLogin" 代表要直接執行登入
                        this.doLogin();
                        return;
                    }
                    this.$nextTick(() => {
                        const element = targetField === 'loginButton'
                            ? this.$refs.loginButton
                            : this.$refs[`${targetField}Input`];
                    if (element) {
                    element.focus();
                        }
                    });
                },
                
                async doLogin() {
                    if (!this.faccount || !this.fpassword) {
                        alert('請填寫完整的帳號和密碼！');
                        return;
                    }
                    this.isLoading = true;// 設置加載狀態
                    this.errorMessage = '';
                try {
                    const loginData = {// 準備登入數據
                        faccount: this.faccount.trim(),
                        fpassword: this.fpassword
                    };
                    const response = await fetch('/Account/Login', {// 發送登入請求
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        credentials: 'include',
                        body: JSON.stringify(loginData)
                    });

                    const data = await response.json();

                    if (data.success) {
                        this.isLoggedIn = true;// 登入成功
                        await this.checkLoginStatus();

                        const loginModal = bootstrap.Modal.getInstance(document.getElementById('loginModal'));
                    if (loginModal) {
                        loginModal.hide();                        
                    }
                    
                    setTimeout(() => {// 延遲重定向以確保 Modal 完全關閉
                        window.location.href = data.redirectUrl || '/FrontHome/FrontIndex';
                        }, 300);                    
                    } 
                    else {
                        this.errorMessage = data.message || '登入失敗，請檢查帳號密碼！';
                        alert(this.errorMessage);
                    }
                } 
                catch (error) {
                    console.error('Login error:', error);
                    this.errorMessage = '系統發生錯誤，請稍後再試！';
                    alert(this.errorMessage);
                    }
                    finally {
                        this.isLoading = false;
                }
            },
            // 會員圖示點擊處理                               
            async handleMemberClick() {
                if (this.isLoggedIn) {
                    this.showDropdown = !this.showDropdown;
                } 
                else {
                    const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                    loginModal.show();
                }
            },

            async handleLogout() {
            try {
                const response = await fetch('/Account/Logout', {
                    method: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                        },
                        credentials: 'include'
                    });
                    const data = await response.json();

                    if (data.success) {
                        this.isLoggedIn = false;
                        this.showDropdown = false;
                        this.memberInfo = null;
                        window.location.href = '/';
                    }
                    else {
                        alert('登出失敗，請稍後再試');
                    }
                } 
                catch (error) {
                    console.error('登出時發生錯誤:', error);
                    alert('系統發生錯誤，請稍後再試');
                    }
                },
                
            async checkLoginStatus() { // 建議新增：檢查登入狀態的方法
                try {
                    const response = await fetch('/Account/CheckLoginStatus', {
                        method: 'GET',
                        credentials: 'include'
                    });

                    const data = await response.json();

                    if (data.isLoggedIn) {
                        this.isLoggedIn = true;
                        this.memberInfo = data.memberInfo;
                    }
                    else {
                        this.isLoggedIn = false;
                        this.memberInfo = null;
                    }
                }
                catch (error) {
                    console.error('檢查登入狀態時發生錯誤:', error);
                    }
                }
            }           
        }).mount('#vueLogin');
    </script>
