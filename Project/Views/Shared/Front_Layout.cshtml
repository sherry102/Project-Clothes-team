    @* 客服助理 *@
    <div id="chatApp">
        <!-- 聊天氣泡：在用戶未開啟聊天小工具時顯示 -->
        <div class="chat-wrapper">
            <div class="chat-bubble" v-show="isBubbleVisible">
                <strong>智能助理Unicorn</strong><br />
                <div class="tips">Hi~需要幫忙嗎？</div>
            </div>   
        </div>
        <!-- 聊天切換按鈕：用來顯示或隱藏聊天小工具 -->
        <button type="button" class="chat-toggle" ref="chatToggle" @@click="toggleChat" title="開啟智能客服Unicorn">
            <img src="~/Images/unicorn.png" alt="智能助理Unicorn" />
        </button>
        <!-- 聊天小工具：顯示聊天內容和訊息 -->
        <div class="container">
            <div class="chat-widget" v-show="isVisible" ref="chatWidget">
                <div class="chat-widget-header">
                    <h4>
                        <i class="fas fa-robot"></i>
                        智能助理Unicorn
                    </h4>
                    <!-- 關閉按鈕 -->
                    <button type="button" class="chat-close" @@click="closeChat" title="關閉智能客服">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <!-- 顯示訊息區域，動態渲染訊息 -->
                <div class="chat-widget-context" ref="messagesContainer">
                     <div v-for="(msg, index) in messages"
                          :key="index"
                         :class="['chat-message', msg.type]">
                          {{ msg.content }}
                          <button type="button" v-if="msg.showButton" class="real-customer-service-btn" @@click ="connectToRealService" title="連線真人客服">
                                連接真人客服
                          </button>
                     </div>                   
                    <!-- 顯示「正在輸入」的訊息提示 -->
                    <div v-if="isTyping" class="chat-message received">正在輸入...</div>
                </div>
                <!-- 輸入區域：用戶輸入訊息 -->
                <div class="chat-widget-footer">
                    <div class="chat-widget-input">
                        <!-- 雙向綁定 message -->
                        <!-- 按下 Enter 鍵觸發 SendMessage 方法 -->
                        <input type="text"
                               ref="chatInput"
                               v-model="message"
                               @@keyup.enter="sendMessage"
                               placeholder="輸入訊息..." />
                        <!-- 發送按鈕 -->
                        <button type="button" @@click="sendMessage"
                                :style="{ transform: message.trim() ? 'scale(1.1)' : 'scale(1)' }" title="發送訊息">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>             
            </div>
        </div>        
    </div>
