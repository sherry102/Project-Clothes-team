            </div>
                <!-- 登入 Modal -->
                <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" 
                    aria-hidden="true" v-if="showLoginModal" v-on:click.self ="handleModalBackdropClick">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content p-4" style="border-radius: 0;">

                            <!-- 登入標題 (置中) -->
                            <h2 class="text-center mb-4" style="font-weight:700; font-size:1.5rem; color:darkorange">
                                登入
                            </h2>

                            <label for="faccount" style="font-size: 20px; color:#007979;">帳號</label>
                            <!-- 帳號/手機欄位 -->
                            <div class="mb-4">
                                <input id="faccount"
                                       type="text"
                                       class="form-control"
                                       placeholder="請輸入帳號、手機或 Email"
                                       style="height: 40px;"
                                       v-model="faccount"
                                       v-on:keydown.enter="handleKeyNavigation('account', 'Enter', $event)"
                                       v-on:keydown.down="handleKeyNavigation('account', 'ArrowDown', $event)"
                                       v-on:keydown.up="handleKeyNavigation('account', 'ArrowUp', $event)"
                                       ref="accountInput" />
                            </div>
                            <label for="fpassword" style="font-size: 20px; color:#6C3365;">密碼</label>
                            <!-- 密碼欄位 -->
                            <div class="mb-4 position-relative">
                                <input id="fpassword"
                                       v-on:type="passwordVisible ? 'text' : 'password'"
                                       class="form-control"
                                       placeholder="請輸入密碼"
                                       style="height: 40px;"
                                       v-model="fpassword"
                                       v-on:keydown.enter="handleKeyNavigation('password', 'Enter', $event)"
                                       v-on:keydown.down="handleKeyNavigation('password', 'ArrowDown', $event)"
                                       v-on:keydown.up="handleKeyNavigation('password', 'ArrowUp', $event)"
                                       ref="passwordInput" />
                                <!-- 眼睛圖示按鈕 -->
                                <button type="button"
                                        class="btn position-absolute end-0 top-50 translate-middle-y"
                                        style="background: none; border: none; outline: none; z-index: 10;"
                                        v-on:click="togglePasswordVisibility">
                                    <i :class="passwordVisible ? 'bi bi-eye' : 'bi bi-eye-slash'"
                                       style="color: #AE0000;"></i>
                                </button>
                            </div>

                            <!-- 忘記密碼連結 -->
                            <div class="mb-4 text-end">
                                <a href="/Account/ForgotPassword"
                                   class="link-secondary"
                                   style="font-size: 0.9rem;">
                                    忘記密碼？
                                </a>
                            </div>

                            <!-- 大按鈕: 開始購物吧！ (紅色背景，字白) -->
                            <button class="btn w-100 mb-4"
                                    style="background-color: #FF5A5F; color: #fff; font-size: 1.1rem; height:50px;"
                                    v-on:click="doLogin"
                                    v-on:keydown.enter ="doLogin"
                                    v-on:keydown.up="handleKeyNavigation('loginButton', 'ArrowUp', $event)"
                                    v-on:keydown.down="handleKeyNavigation('loginButton', 'ArrowDown', $event)"
                                    ref="loginButton">
                                <span v-if="!isLoading">開始購物吧！</span>                               
                            </button>

                            <!-- 社群登入: 文字 + LINE圖示 -->
                            <div class="text-center my-3">
                                或使用社群帳號登入
                            </div>
                            <div class="text-center mb-4">
                                <img src="https://scdn.line-apps.com/n/line_add_friends/btn/zh-Hant.png"
                                     alt="Line"
                                     style="width:60px; cursor:pointer;"
                                     v-on:click ="handleLineLogin" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
