@* @model IEnumerable<Project.Models.Tproduct> *@

@model List<Project.Models.CProductWrap> 



@{
    ViewData["Title"] = "Renew";
}

<h1>下架商品一覽表</h1>


@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" />
}

<div>
    <a asp-action="List">返回列表</a>
</div>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Ptype)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pcategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Psize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pcolor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pdepiction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pinventory)
            </th>

            <th>
                @Html.DisplayNameFor(model => model[0].Pdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pimage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count2 = 0;
            foreach (var item in Model.Where(m => m.Pinventory > 0))
            {
                count2++;
                <tr>
                    <td>
                        @count2
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pprice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ptype)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pcategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Psize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pcolor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pdepiction)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pinventory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pdate)
                    </td>
                    <td>
                        <img src="~/images/@item.Pimage" height="80" width="90" /><br />

                    </td>

                    <td>
                        @Html.ActionLink("修改商品資訊", "Edit", new { id = item.Pid }) <br /><br />
                        @Html.ActionLink("商品上架", "Recovery", "Product", new { id = item.Pid },
                             new { onclick = "return confirm('確定要上架商品嗎?')" })<br /><br />
                        @Html.ActionLink("刪除商品", "Delete", "Product", new { id = item.Pid },
                             new { onclick = "return confirm('確定要刪除商品嗎?')" })
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
