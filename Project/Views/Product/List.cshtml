@model List<Project.Models.CProductWrap> 

@{
    ViewData["Title"] = "List";
}

<h1>商品資料一覽表</h1>

@using (Html.BeginForm())
{
    @:關鍵字 @Html.TextBox("txtKeyword")
    <input type="submit" value="查詢" />
}

<p>
    <a asp-action="Create">新增商品</a>
    <a asp-action="Renew" class="ms-3">商品重上架</a>
</p>

<h4>架上商品</h4>
<table class="table">
    <thead>
        <tr>
            <th>序</th>
            <th>圖片</th>
            <th>商品名稱</th>
            <th>價格</th>
            <th>類型</th>
            <th>分類</th>
            <th>描述</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>
                    <img src="~/images/@item.Pphoto" height="80" width="70" class="rounded" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Pname)</td>
                <td>@Html.DisplayFor(modelItem => item.Pprice)</td>
                <td>@Html.DisplayFor(modelItem => item.Ptype)</td>
                <td>@Html.DisplayFor(modelItem => item.Pcategory)</td>
                <td>@Html.DisplayFor(modelItem => item.Pdescription)</td>
                <td>
                    @Html.ActionLink("修改", "Edit", new { id = item.Pid }, new { @class = "btn btn-outline-dark btn-sm" })
                    <!-- 查看庫存明細按鈕 -->
                    <button class="btn btn-outline-dark btn-sm" type="button" data-bs-toggle="modal"
                            data-bs-target="#inventoryModal-@count">
                        查看庫存
                    </button>
                    @Html.ActionLink("下架", "Hide", "Product", new { id = item.Pid },
                             new { @class = "btn btn-outline-dark btn-sm", onclick = "return confirm('確定要下架商品嗎?')" })
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var item in Model)
{
    int modalCount = Model.IndexOf(item) + 1;
    <!-- Bootstrap 5 Modal -->
    <div class="modal fade" id="inventoryModal-@modalCount" tabindex="-1" aria-labelledby="inventoryModalLabel-@modalCount" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inventoryModalLabel-@modalCount">庫存明細 - @item.Pname</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    @if (item.TproductInventories != null && item.TproductInventories.Any())
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>顏色</th>
                                    <th>尺寸</th>
                                    <th>庫存</th>
                                    <th>最後更新時間</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var inventory in item.TproductInventories)
                                {
                                    <tr>
                                        <td>@inventory.Pcolor</td>
                                        <td>@inventory.Psize</td>
                                        <td>@inventory.Pstock</td>
                                        <td>@inventory.PlastUpdated.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">沒有庫存資訊</p>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
}



