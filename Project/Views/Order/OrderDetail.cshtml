@model List<Project.Models.COrderDetailWarp>

@{
    ViewBag.Title = "OrderDetail";
}
<h4>@String.Format("訂單編號：{0}",this.Model.First().Oid)</h4>

@if (Model.Any(t => t.Pid > 0)){
<div class="mt-auto py-5">
<h4>商品列表</h4>

<table class="table">
    <thead>
        <tr>
            <th>
               序
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pprice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Psize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Pcolor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].OtotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Odcounts)
            </th>
        </tr>
    </thead>
    <tbody>
 @{
        int count1 = 0;
            foreach (var item in Model.Where(m => m.Pid > 0))
            {
                count1++;
        <tr>
            <td>
                @count1
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pprice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Psize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pcolor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Odcounts)
            </td>
          
        </tr>
    }
}
    </tbody>
</table>
</div>
}
@if(Model.Any(t=>t.Cid>0)){
<div class="mb-3">
<h4>客製化商品列表</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                序
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Cimage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Ctext)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Cfont)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CfontSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].OtotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Odcounts)
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            int count2 = 0;
            foreach (var item in Model.Where(m => m.Cid > 0))
            {
                count2++;
                <tr>

                    <td>
                        @count2
                    </td>
                    <td>
                        <img src="~/Images/@item.Cimage" height="100" width="100" /><br />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ctext)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cfont)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CfontSize)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OtotalPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Odcounts)
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
</div>
}
