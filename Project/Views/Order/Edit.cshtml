@model Project.Models.OrderWrap

@{
    ViewData["Title"] = "Edit";
}

<h1>修改訂單</h1>

<h4>訂單內容</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Oid" class="control-label"></label>
                <input asp-for="Oid" class="form-control" readonly="readonly" />
                <span asp-validation-for="Oid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oname" class="control-label"></label>
                <input asp-for="Oname" class="form-control" />
                <span asp-validation-for="Oname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oprice" class="control-label"></label>
                <input asp-for="Oprice" class="form-control" />
                <span asp-validation-for="Oprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odiscountedprice" class="control-label"></label>
                <input asp-for="Odiscountedprice" class="form-control" />
                <span asp-validation-for="Odiscountedprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtotalPrice" class="control-label"></label>
                <input asp-for="OtotalPrice" class="form-control" />
                <span asp-validation-for="OtotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odate" class="control-label"></label>
                <input type="datetime-local" class="form-control"
                       value="@Model.Odate.ToString("yyyy-MM-ddTHH:mm:ss")"
                       name="Odate" />
                <span asp-validation-for="Odate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mid" class="control-label"></label>
                <input asp-for="Mid" class="form-control" readonly="readonly" />
                <span asp-validation-for="Mid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oaddress" class="control-label"></label>
                <input asp-for="Oaddress" class="form-control" />
                <span asp-validation-for="Oaddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ophone" class="control-label"></label>
                <input asp-for="Ophone" class="form-control" />
                <span asp-validation-for="Ophone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oemail" class="control-label"></label>
                <input asp-for="Oemail" class="form-control" />
                <span asp-validation-for="Oemail" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Ostatus" class="control-label">訂單狀態</label>
                @Html.DropDownListFor(model => model.Ostatus,
                         new SelectList(new[] { "待出貨", "運送中", "已完成", "退貨" }, Model.Ostatus),
                         new { @class = "form-control" })
                <span asp-validation-for="Ostatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opayment" class="control-label">付款狀態</label>
                <select asp-for="Opayment" class="form-control"> 
                    <option value="True">已付款</option>
                    <option value="False">未付款</option>
                </select>
                <span asp-validation-for="Opayment" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="OcancelReason" class="control-label">訂單取消原因</label>
                <textarea asp-for="OcancelReason" class="form-control" rows="1" readonly></textarea>
                <span asp-validation-for="OcancelReason" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OcancelDescription" class="control-label">訂單取消描述</label>
                <textarea asp-for="OcancelDescription" class="form-control" style="height: 98px;" readonly></textarea>
                <span asp-validation-for="OcancelDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OcancelStatus" class="control-label">訂單取消狀態</label>
                <select asp-for="OcancelStatus" class="form-control">
                    <option value="未取消">未取消</option>
                    <option value="申請中">申請中</option>
                    <option value="已出貨無法取消">已出貨無法取消</option>
                    <option value="已取消">已取消</option>
                </select>
                <span asp-validation-for="OcancelStatus" class="text-danger"></span>
            </div>

        </div>

        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="OreturnStatus" class="control-label">退貨申請</label>
                <select asp-for="OreturnStatus" class="form-control">
                    <option value=""></option>
                    <option value="申請中">申請中</option>
                    <option value="申請逾時">申請逾時</option>
                </select>
                <span asp-validation-for="OreturnStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OreturnNo" class="control-label">退貨編號</label>
                <input asp-for="OreturnNo" class="form-control" readonly="readonly" />
                <span asp-validation-for="OreturnNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OreturnDate" class="control-label">申請時間</label>
                <input asp-for="OreturnDate" class="form-control" readonly="readonly" />
                <span asp-validation-for="OreturnDate" class="text-danger"></span>
            </div>

            <div class="form-group" style="padding-top: 23px;">
                <input type="submit" value="訂單內容送出修改" class="btn btn-primary" />
                <a asp-action="List" class="btn btn-primary">取消/返回</a>
            </div> 
        </div>
    </div>
</form>


<p> 
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
