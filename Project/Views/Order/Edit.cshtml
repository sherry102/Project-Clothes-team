@model Project.Models.OrderWrap

@{
    ViewData["Title"] = "Edit";
}

<h1>修改訂單</h1>

<h4>訂單內容</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Oid" class="control-label"></label>
                <input asp-for="Oid" class="form-control" />
                <span asp-validation-for="Oid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oname" class="control-label"></label>
                <input asp-for="Oname" class="form-control" />
                <span asp-validation-for="Oname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odiscountedprice" class="control-label"></label>
                <input asp-for="Odiscountedprice" class="form-control" />
                <span asp-validation-for="Odiscountedprice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtotalPrice" class="control-label"></label>
                <input asp-for="OtotalPrice" class="form-control" />
                <span asp-validation-for="OtotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Odate" class="control-label"></label>
                <input asp-for="Odate" class="form-control" />
                <span asp-validation-for="Odate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mid" class="control-label"></label>
                <input asp-for="Mid" class="form-control" />
                <span asp-validation-for="Mid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Oaddress" class="control-label"></label>
                <input asp-for="Oaddress" class="form-control" />
                <span asp-validation-for="Oaddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ophone" class="control-label"></label>
                <input asp-for="Ophone" class="form-control" />
                <span asp-validation-for="Ophone" class="text-danger"></span>
            </div>
            <!-- 訂單狀態 (下拉選單) -->
            <div class="form-group">
                <label asp-for="Ostatus" class="control-label">訂單狀態</label>
                @Html.DropDownListFor(model => model.Ostatus,
                         new SelectList(new[] { "已訂購", "待出貨", "運送中", "已完成", "退款" }, Model.Ostatus),
                         new { @class = "form-control" })
                <span asp-validation-for="Ostatus" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Opayment" /> @Html.DisplayNameFor(model => model.Opayment)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="送出修改" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
