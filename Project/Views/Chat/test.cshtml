	@section Scripts{
		<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
		<script>
			const chatUser = document.querySelector("#chat_user");
			const chatRoom = document.querySelector("#chatRoom");
			function chatUpdate() {
				chatUser.innerHTML = "";
					@foreach (var chat in ViewBag.chatPeople)
					{
						var Name = chat.MemberName;
						var Photo = chat.MemberPhoto;
						<text>
						chatUser.innerHTML+=`
							<a href="#" class="list-group-item list-group-item-action border-0 px-4 py-3 d-flex">
								<div class="d-flex align-items-center">
									<img src="~/Images/@Photo" class="rounded-circle mr-1" alt="Vanessa Tucker" width="40" height="40">
										<div class="flex-grow-1 ml-3 ms-2">
								@Name
										</div>
								</div>
							</a>
						`;
						</text>
					}
				};
			chatUpdate();

			const connection = new signalR.HubConnectionBuilder()
			.withUrl("https://localhost:7279/ChatHub")
			.build();

			//更新聊天內容事件
			connection.on("UpdContent", function (msg) {
				const li = document.createElement("li");
				li.textContent = msg;
				chatRoom.appendChild(li);
			});

		</script>
		
	}