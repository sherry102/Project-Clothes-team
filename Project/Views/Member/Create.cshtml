@model Project.Models.CMemberWrap

{
    ViewData["Title"] = "Create";
}

<h1>新增會員</h1>

<h4>填寫會員資訊</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Mname" class="control-label"></label>
                <input asp-for="Mname" class="form-control" />
                <span asp-validation-for="Mname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mgender" class="control-label">性別</label>
                <select asp-for="Mgender" class="form-control">
                    <option value="0">男性</option>
                    <option value="1">女性</option>
                </select>
                <span asp-validation-for="Mgender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maccount" class="control-label"></label>
                <input asp-for="Maccount" class="form-control" />
                <span asp-validation-for="Maccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mpassword" class="control-label"></label>
                <input asp-for="Mpassword" class="form-control" />
                <span asp-validation-for="Mpassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memail" class="control-label"></label>
                <input asp-for="Memail" class="form-control" />
                <span asp-validation-for="Memail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maddress" class="control-label"></label>
                <input asp-for="Maddress" class="form-control" />
                <span asp-validation-for="Maddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mbirthdays" class="control-label"></label>
                <input asp-for="Mbirthdays" class="form-control datepicker" />
                <span asp-validation-for="Mbirthdays" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Mphone" class="control-label"></label>
                <input asp-for="Mphone" class="form-control" />
                <span asp-validation-for="Mphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mpoints" class="control-label"></label>
                <input asp-for="Mpoints" class="form-control" readonly value="0" />
                <span asp-validation-for="Mpoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mpermissions" class="control-label"></label>
                <select asp-for="Mpermissions" class="form-control">
                <option value="0">一般訪客</option>
                <option value="1">黑名單</option>
                <option value="2">會員</option>
                <option value="3">VIP會員</option>
                <option value="11">一般員工</option>
                <option value="21">副店長</option>
                <option value="31">店長</option>
                <option value="51">經理</option>
                <option value="61">區經理</option>
                <option value="71">執行長</option>
                <option value="81">副總</option>
                <option value="91">負責人</option>
                </select>
                <span asp-validation-for="Mpermissions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mphoto" class="control-label"></label>
                <input asp-for="Mphoto" class="form-control" type="file" 
                id="Mphoto" accept="image/*" onchange="previewImage(event)" />           
                <span asp-validation-for="Mphoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <!-- 圖片預覽區 -->
                <img id="photoPreview" src="#" alt="會員照片預覽" style="max-width: 200px; display: none; margin-top: 10px;" />
            </div>
            <div class="form-group">
                <input type="submit" value="新增完成" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">取消</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function() {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true,
                language: 'zh-TW',
                todayHighlight: true,
                clearBtn: true,
                orientation: "bottom auto", 
                startYear: 1990,
                endYear: 2100,
                startDate: '1990-01-01',
                endDate: '2100-12-31'
            });
        });

        function previewImage(event) {
            const file = event.target.files[0]; // 取得上傳的檔案
            const preview = document.getElementById('photoPreview'); // 預覽的 img 元素
            const maxSize = 1 * 1024 * 1024; // 最大檔案大小設定為 2MB

            if (file) {
                if (file.size > maxSize) {
                    alert('檔案大小超過限制，請選擇小於 1MB 的檔案');
                    event.target.value = ''; // 清空已選檔案
                    preview.src = "#"; // 清空圖片預覽
                    preview.style.display = 'none'; // 隱藏圖片預覽
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result; // 設定預覽圖片的來源為上傳的圖片
                    preview.style.display = 'block'; // 顯示圖片預覽
                };
                reader.readAsDataURL(file); // 將檔案讀取為 Base64 URL
             }
             else {
                preview.src = "#"; // 清空圖片預覽
                preview.style.display = 'none'; // 隱藏圖片預覽
            }
        }
    </script>
}
